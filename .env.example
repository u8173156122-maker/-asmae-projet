# ============================================================
# ASMAE EL GASMI - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# Domain: elgasmi-eu.com | API: app.elgasmi-eu.com
# ============================================================

# Frontend (Vite) - prefix with VITE_
VITE_API_URL=http://localhost:3001
VITE_SENTRY_DSN=your_sentry_dsn_here

# Backend - OpenAI (REQUIRED for AI chat)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Backend - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Backend - PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_WEBHOOK_ID=your_webhook_id

# Backend - Security
JWT_SECRET=your_jwt_secret_min_32_chars_here
ENCRYPTION_KEY=your_encryption_key_64_chars_here

# Backend - Server
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,https://elgasmi-eu.com
APP_URL=https://elgasmi-eu.com

# Optional - Sentry Backend
SENTRY_DSN=your_backend_sentry_dsn

# Optional - Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
